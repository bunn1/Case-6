<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- <link rel="stylesheet" href="/public/styles/style.css"> -->
  <link rel="stylesheet" href="../public/styles/main.css">
  <title>Start</title>
  <script>
    async function deleteEvent(id) {
      const response = await fetch(`/index/${id}`, {
        method: "delete"
      })

      if (response.redirected) {
        window.location.href = response.url;

        console.log("Hello deleteEvent", id)
      }
    }
  </script>
  <!-- <link rel="stylesheet" href="styles/styles.css"> -->
  <!-- FIX FOR FAVICON.ICO -->
  <link rel="shortcut icon" href="#">
</head>

<body>
  <!-- Header -->
  <%- include('partials/header.ejs') %>


  <% events.forEach(event => { %>
  <h2><%= event.title %></h2>
  <p><%= event.dateTime %> </p>
  <% }) %>


  <div id="changeWeek">
    <ion-icon name="chevron-back-outline"></ion-icon>
    <div id="currentWeek">20</div>
    <ion-icon name="chevron-forward-outline"></ion-icon>
  </div>

  <div class="parent">


    <div class="oneDay">
      <h2>MONDAY</h2>
      <ul class="day-card">
        <p> Title </p>
        <li class="event-card">
          <p class="testtest">Date</p>
        </li>
      </ul>
    </div>

    <div class="oneDay">
    <h2>TUESDAY</h2>
    <ul class="day-card active">
      <p> Title </p>
      <li class="event-card">
        <p class="testtest">Date</p>
      </li>
    </ul>
    </div>

    <div class="oneDay">
      <h2>WEDNESDAY</h2>
      <ul class="day-card">
        <p> Title </p>
        <li class="event-card">
          <p class="testtest">Date</p>
        </li>
      </ul>
    </div>

    <div class="oneDay">
      <h2>THURSDAY</h2>
      <ul class="day-card">
        <p> Title </p>
        <li class="event-card">
          <p class="testtest">Date</p>
        </li>
      </ul>
    </div>

    <div class="oneDay">
      <h2>FRIDAY</h2>
      <ul class="day-card">
        <p> Title </p>
        <li class="event-card">
          <p class="testtest">Date</p>
        </li>
      </ul>
    </div>


    <form action="/" method="post">
      <label for="title">Event</label>
      <input type="text" name="title" id="title">
      <label for="desc">Date And Time</label>
      <input type="text" name="date" id="date">
      <button type="submit">Create</button>
      <% locals.events.forEach(ele => { %>
      <%- ele.title %> <%- ele.date %>
      <button onclick="deleteEvent(<%= ele.id %>)">Delete</button>
      <% }) %>
    </form>

    <!-- <button type="submit">Add event</button> -->
  </div>

  </div>


  <!-- Footer -->
  <%- include('partials/footer.ejs') %>

  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>